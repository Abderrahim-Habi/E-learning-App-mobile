<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:elevation="4dp"
    android:layout_margin="8dp"
    android:backgroundTint="#FFFFFF">

    <!-- Image de cours -->
    <ImageView
        android:id="@+id/courseImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_image_background"/>

    <!-- Contenu du cours -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">

        <!-- Titre -->
        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Beatles: The Music, the Myth, the Legend"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#0d151c"
            android:ellipsize="end"
            android:maxLines="2" />

        <!-- Sous-titre -->
        <TextView
            android:id="@+id/courseSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By University of Rochester"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="#49779c"
            android:layout_marginTop="4dp" />

        <!-- CatÃ©gorie -->
        <TextView
            android:id="@+id/courseCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Music, Art and Culture"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textColor="#A7A7A7"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>
